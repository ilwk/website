---
import Head from "@/components/BaseHead.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { SITE } from "@/consts";

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={`${title} | ${SITE.NAME}`} description={description} />
  </head>
  <body
    class="flex flex-col bg-stone-100 dark:bg-stone-900 text-black/50 dark:text-white/75"
  >
    <Header />
    <main class="flex-1 py-32">
      <slot />
    </main>
    <Footer />
  </body>
</html>
