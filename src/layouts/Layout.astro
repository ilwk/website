---
import BaseHead from '../components/BaseHead.astro'
import { SITE } from '../consts'

interface Props {
	title?: string
	description?: string
}

const { title = SITE.title, description = SITE.description } = Astro.props
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<slot />
	</body>
</html>
